@model AnnonceViewModel

<h1>@Model.Titre</h1>

<p><strong>Description:</strong> @Model.Description</p>
<p><strong>Points:</strong> @Model.Points</p>
<p><strong>Date:</strong> @Model.Date.ToString("yyyy-MM-dd")</p>
<p><strong>Status:</strong> @(Model.IsActive ? "Active" : "Inactive")</p>
<p><strong>Posted by:</strong> @Model.UserName</p>

<h3>Tags</h3>
@if (Model.Tags.Any())
{
    <ul>
        @foreach (var tag in Model.Tags)
        {
            <li>@tag</li>
        }
    </ul>
}
else
{
    <p>No tags associated with this annonce.</p>
}

<h3>Geographical Sectors</h3>
@if (Model.GeographicalSectors.Any())
{
    <ul>
        @foreach (var sector in Model.GeographicalSectors)
        {
            <li>@sector</li>
        }
    </ul>
}
else
{
    <p>No geographical sectors associated with this annonce.</p>
}

