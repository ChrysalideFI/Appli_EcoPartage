@model List<UserAnnonceDisplayModel>

@if (Model.Any())
{
    <h2>Annonces</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Points</th>
                <th>Date</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var annonce in Model)
            {
                <tr>
                    <td>@annonce.Titre</td>
                    <td>@annonce.Description</td>
                    <td>@annonce.Points</td>
                    <td>@annonce.Date.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>
                        @if (annonce.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactive</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-center text-muted">No annonces yet.</p>
}



