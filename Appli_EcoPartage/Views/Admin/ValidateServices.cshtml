@model IEnumerable<Appli_EcoPartage.Data.Annonces>

@{
    ViewData["Title"] = "Valider les Services";
}

<h1>Valider les Services</h1>

<table class="table">
    <thead>
        <tr>
            <th>Titre</th>
            <th>Description</th>
            <th>Points</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var service in Model)
        {
            <tr>
                <td>@service.Titre</td>
                <td>@service.Description</td>
                <td>@service.Points</td>
                <td>
                    <form asp-action="ApproveService" method="post">
                        <input type="hidden" name="serviceId" value="@service.IdAnnonce" />
                        <button type="submit" class="btn btn-success">Approuver</button>
                    </form>
                    <form asp-action="RejectService" method="post">
                        <input type="hidden" name="serviceId" value="@service.IdAnnonce" />
                        <button type="submit" class="btn btn-danger">Rejeter</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
