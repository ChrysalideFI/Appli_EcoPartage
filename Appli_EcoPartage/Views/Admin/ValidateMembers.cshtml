@model IEnumerable<Appli_EcoPartage.Data.Users>

@{
    ViewData["Title"] = "Validate Users";
}

<h1>Validate Users</h1>

<!-- Formulaire pour afficher la liste des utilisateurs à valider -->
<table class="table">
    <thead>
        <tr>
            <th>User Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <!-- Boucle pour parcourir chaque utilisateur dans le modèle -
        @foreach (var member in Model)
        {
            <tr>
                <td>@member.UserName</td>
                <td>@member.Email</td>
                <td>
                    <form asp-action="ApproveMember" method="post">
                        <input type="hidden" name="memberId" value="@member.Id" />
                           <!-- Bouton pour soumettre le formulaire et approuver l'utilisateur --!>
                        <button type="submit" class="btn btn-success">Approve</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
